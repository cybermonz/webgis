<body>
  <h3>Lab 3: Web-based Mapping Using OpenLayers</h3>
  <h4>Question 2: microsoft.base.darkgrey (Darkgrey)</h4>
  <h4>Author: Monica Layug</h4>
  <div id="map"></div>

  <script>
    // Azure Maps Key (must be on a single line)
    const AZURE_KEY = '81u9AnyuE91GBupq2rrMNIytJcQQ6dExViU2bLHif4cC9VSKQpuIJQQJ99BJACYeBjFNMnj2AAAgAZMP4Q3s';

    // --- Azure Maps Basemap ---
    const azureRoadLayer = new ol.layer.Tile({
      title: 'Azure Maps (Dark Grey)',
      source: new ol.source.XYZ({
        url:
          'https://atlas.microsoft.com/map/tile?api-version=2022-08-01' +
          '&tilesetId=microsoft.imagery&zoom={z}&x={x}&y={y}' +
          '&subscription-key=' + AZURE_KEY,
        crossOrigin: 'anonymous'
      })
    });

    // --- Map Setup ---
    const map = new ol.Map({
      target: 'map',
      layers: [azureRoadLayer],
      view: new ol.View({
        projection: 'EPSG:3857',
        center: [-10997148, 4569099], // roughly continental US
        zoom: 4
      })
    });
  </script>
